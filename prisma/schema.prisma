generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  email       String      @unique
  name        String
  password    String
  role        Role        @default(USER)
  totalLeaves Int         @default(18)
  leavesTaken Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  leaves      Leave[]     
  notifications Notification[]
}

model Leave {
  id         String     @id @default(cuid())
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  type       LeaveType
  startDate  DateTime
  endDate    DateTime
  days       Int
  reason     String
  status     LeaveStatus @default(PENDING)
  reviewedBy String?
  reviewedAt DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String
  body      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}

enum LeaveType {
  SICK
  CASUAL
  PAID
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}